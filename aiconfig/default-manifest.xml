<!DOCTYPE auto_install SYSTEM "file:///usr/share/install/ai.dtd.1">
<auto_install>
  <ai_instance auto_reboot="true" name="orig_default">
    <target>
      <logical noswap="false" nodump="false">
        <zpool name="rpool" is_root="true" action="create" is_boot="false">
          <filesystem name="apps" mountpoint="/opt/apps" action="create" in_be="false"/>
          <filesystem name="apps/users" mountpoint="/opt/apps/users" action="create" in_be="false"/>
          <pool_options>
            <option name="listsnapshots" value="on"/>
          </pool_options>
          <be name="solaris"/>
        </zpool>
      </logical>
    </target>
    <software type="IPS">
      <destination>
        <image action="create" index="false">
          <!-- Specify locales to install -->
          <facet set="false">facet.locale.*</facet>
          <facet set="true">facet.locale.en</facet>
          <facet set="true">facet.locale.en_US</facet>
        </image>
      </destination>
      <source>
        <publisher name="solaris">
          <origin name="http://130.164.51.133"/>
        </publisher>
      </source>
      <software_data action="install">
        <name>pkg:/entire</name>
        <name>pkg:/group/system/solaris-large-server</name>
      </software_data>
    </software>
  </ai_instance>
</auto_install>
